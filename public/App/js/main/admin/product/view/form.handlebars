<div class="form-group">
  <label for="title">{{view.label.title}}</label>
  <input name="title" id="title" type="text" class="form-control"
         placeholder="{{view.placeholder.title}}"
         value="{{view.model.title}}">
</div>

<div class="form-group">
  <label for="comments">{{view.label.comments}}</label>
  <textarea name="comments" id="comments" class="form-control" rows="3"
            placeholder="{{view.placeholder.comments}}">{{view.model.comments}}</textarea>
</div>
