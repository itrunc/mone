<p class="login-box-msg">账户注册</p>
<form method="post" action="/user">
  <div class="form-group has-feedback">
    <input name="username" type="text" class="form-control validate" placeholder="User name" required>
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <input name="email" type="email" class="form-control validate" placeholder="Email" required>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <input name="password" type="password" class="form-control validate" placeholder="Password" required>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <input name="password2" type="password" class="form-control validate" placeholder="Password Again" required>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>
  <div class="input-captcha form-group"></div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-8">
        <button type="submit" class="btn btn-primary btn-block btn-flat">注册</button>
      </div><!-- /.col -->
    </div>
  </div>
  <input name="type" type="hidden" value="signup">
</form>

<div class="social-auth-links text-center"></div><!-- /.social-auth-links -->

<a href="/user#signin">已注册点此登录</a>